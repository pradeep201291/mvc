@model CCIOfficeServiceManagementSystem.Models.Transport

@{
    ViewBag.Title = "ImportExcelFile";
    Layout = "~/Views/Shared/_Layout.cshtml";
    
}

<link href="@Url.Content("~/Content/themes/base/jquery.ui.core.css")" rel="stylesheet" type="text/css" />
<link href="@Url.Content("~/Content/themes/base/jquery.ui.datepicker.css")" rel="stylesheet" type="text/css" />
<link href="@Url.Content("~/Content/themes/base/jquery.ui.themes.css")" rel="stylesheet" type="text/css" />

<script src="@Url.Content("~/Scripts/jquery.ui.core.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.ui.datepicker.min.js")" type="text/javascript"></script>
<div style="border-bottom:ridge 1px;top:20px;position:relative;">
    <table>
        <tr>
            <td> 
                @using (Html.BeginForm("ImportExcelFile", "Transport", FormMethod.Get))
                {
                    <input type="submit" value="Import" style="width: 100px; background-color: #0060A9;font-size:large;color:white;height:30px;border:none;" />
                }
            </td>
            <td>
                @using (Html.BeginForm("ViewDataOfTransDatabase", "Transport", FormMethod.Post))
                {
                    <input type="submit" value="View" style="width: 100px; background-color: #0060A9;font-size:large;color:white;height:30px;border:none;" />
                }
            </td>
        </tr>
    </table>
</div>

@*<h2 style="text-align:center;left:100px;">Import ExcelFile To Database</h2>*@
 
<div style="margin-left:100px;">
    <h2 style="text-align:center">ImportExcelFile</h2><br />
    @using (Html.BeginForm("ImportExcelFile", "Transport", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <label>FileAddress::</label>
        <input type="file" id="FileUpload" name="FileUpload" required data-val="true" data-val-required="Please Select a file" /> <br /><br /><br />
        <label>ForTheMonth::</label>
        <input type="date" class="datefield" name="DateOfCreation" data-val-required="Please Select date" required data-val="true" />
        <script>
            $(document).ready(function () {
                $(".datefield").datepicker();
            })
        </script>

        <input type="submit" id="submit" class="submit" value="Upload" title="Click to Upload a file" />

    }
</div>